// This code actually physically pains me that I wrote it.
// I wish this spider had never been born.


show_debug_message("State: " + string(last_state));

if (x &gt; room_width || x &lt; 0 || y &lt; 0 || y &gt; room_height){
    instance_destroy();
}

var margin = sprite_height / 2 + 1;
var x_margin = (sprite_height / 2) - 1;

// Check to see where the spider is attached to.
if (check_collision(x - x_margin * sign(vel_x),y + margin,object_index)){
    // Top
    
    // Check if there is a block in the way
    if (check_collision(x + x_margin * sign(vel_x) + 2, y, object_index)){
        vel_y = -abs(vel_y);
        y += vel_y;  
    } else {
        last_state = 0;
        image_angle = 0;
        if (vel_x &lt; 0){
            image_xscale = -1;
        } else {
            image_xscale = 1;
        }
        x += vel_x;
    }
} else if (check_collision(x - x_margin * sign(vel_x),y - margin,object_index)){
    // Bottom
    
    // Check if there is a block in the way
    if (check_collision(x + x_margin * sign(vel_x) + 2, y, object_index)){
        vel_y = abs(vel_y);
        /*if (vel_x &gt; 0){
            image_angle = 45;
        } else {
            image_angle = 45;
        }*/
        y += vel_y;  
    } else {
        last_state = 1;
        image_angle = 180;
        if (vel_x &lt; 0){
            image_xscale = 1;
        } else {
            image_xscale = -1;
        }
        x += vel_x;
    }
} else if (check_collision(x + margin,y - x_margin * sign(vel_y),object_index)){
    // Left
    last_state = 2;
    image_angle = 90;
    if (vel_y &gt; 0){
        image_yscale = -1;
    } else {
        image_yscale = 1;
    }
    y += vel_y;
} else if (check_collision(x - margin,y - x_margin * sign(vel_y),object_index)){
    // Right
    last_state = 3;
    image_angle = 270;
    if (vel_y &lt; 0){
        image_yscale = -1;
    } else {
        image_yscale = 1;
    }
    y += vel_y;
} else {

    // No blocks, so did he just walk away from one or was it destorye? *cough buttons*
    if (last_state != -1 &amp;&amp; !check_collision(x + margin,y + margin,object_index) &amp;&amp; !check_collision(x - margin,y - margin,object_index)
        &amp;&amp; !check_collision(x - margin,y + margin,object_index) &amp;&amp; !check_collision(x + margin,y - margin,object_index)){    
        // Oh, there is nothign around, guess I'll do gravity
        last_state = -1;
        vel_x = abs(vel_x);
        // Everything breaks if this spider lives....
        instance_destroy();
    }
    
    if (last_state == 0 || last_state == 1){
        if (last_state == 0){
            vel_y = abs(vel_y);
            image_angle = -45;
        } else {
            vel_y = -abs(vel_y);
            image_angle = 135;
        }
        y += vel_y;
        while (!check_collision(x + margin,y,object_index) &amp;&amp; !check_collision(x - margin,y,object_index)){
            y += vel_y;
        }
    } else if (last_state == 2 || last_state == 3){
        if (last_state == 2){
            vel_x = abs(vel_x);
            image_angle = 45;
        } else {
            vel_x = -abs(vel_x);
            image_angle = -135;
        }
        x += vel_x;
        image_angle -= 45;
        while (!check_collision(x,y + margin,object_index) &amp;&amp; !check_collision(x,y - margin,object_index)){
            x += vel_x;
        }
    } else {
    
        // Well, there are no blocks around so I guess do gravity???
        // If there is ground...
        if (check_collision(x - x_margin * sign(vel_x),y + vel_y_grav,object_index)){
            while (!check_collision(x - x_margin * sign(vel_x),y + vel_y_grav,object_index)){
                y++;
            }
        } else {
            vel_y_grav += gravity_y;
            y += vel_y_grav;   
        }
        //show_debug_message("You fucked the spider... good job Henry");
        //instance_destroy();
    }
}
